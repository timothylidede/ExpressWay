<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StartActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/express_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Express"
                    android:textColor="#88d8bd"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/way_title"
                    android:layout_toRightOf="@+id/express_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:textColor="#243665"
                    android:text="Way" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/bus_logo"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:src="@drawable/bus" />

            <TextView
                android:id="@+id/slogan1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/bus_logo"
                android:layout_marginLeft="30dp"
                android:text="Travel on the Nairobi ExpressWay"
                android:textColor="#88d8bd"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/slogan2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/slogan1"
                android:layout_marginLeft="30dp"
                android:text="Fast. Safe. Efficient"
                android:textColor="#243665"
                android:textSize="30dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/slogan2"
                android:layout_alignParentBottom="true"
                android:background="@drawable/top_right_cornered_rect">

                <androidx.cardview.widget.CardView
                    android:id="@+id/start_button"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    app:backgroundTint="@color/white"
                    app:cardCornerRadius="50dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/check_photo"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/check" />

                        <TextView
                            android:id="@+id/start_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/check_photo"
                            android:text="Tap to Start"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>